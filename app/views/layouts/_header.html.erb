<header>
	<a class="imglink" href="/" >
	  <%= image_tag "preptly-6.png", :alt => "Preptly Logo" %>
	</a>
	<nav>
		<ul>
			<li><%= link_to_unless_current "Home", root_path %></li>
			<li><%= link_to_unless_current"About Us", about_path %></li>
			<li><%= link_to_unless_current "Contact Us", contact_path %></li>
		</ul>
		
		<div id="user_nav">
		    <% if user_signed_in? %>
		      Signed in as <%= current_user.email %><br /> 
		      Not you?
		      <%= link_to_unless_current "Sign out", destroy_user_session_path %> 
		    <% else %>
		      <%= link_to_unless_current "Login", user_session_path %>
					or
					<%= link_to_unless_current "Sign Up", new_user_registration_path %>
		    <% end %>
		  </div>
	</nav>
</header>


