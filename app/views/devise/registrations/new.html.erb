<table>
	<tr>
<td>
	<div class="signup">
	<h2>Signing Up is Fast and Secure</h2>
	
	<p>Over 300 job specific interview questions are 15 seconds away!</p>


	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <p><%= f.label :email %><br />
	  <%= f.text_field :email %></p>

	  <p><%= f.label :password %><br />
	  <%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></p>

	  <p><%= f.submit "Sign up" %></p>
	<% end %>
	<%= render :partial => "devise/shared/links" %>
</div>
</td>
<td>
<div class="signup_instruct">
	<ul>
		<li><h4>We need you to sign up so you can create and save your study guide.</h4></li>
		<li><h4>We promise we will <u>NEVER</u> share your information with anyone.</h4></li>
	</ul>
</div>
</td>
</tr>
</table>

